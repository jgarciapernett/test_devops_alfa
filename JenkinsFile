pipeline {
  agent any
  options {
      buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')
      disableConcurrentBuilds()
  }
stages {

  stage('Build') {
            steps {
                script {
                    sh 'mvn clean package'
                }
            }
        }

 stage('Ejecutamos Pruebas Unitarias') {
            steps {
                script {
                    sh 'mvn test'
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

  stage('Imagen Docker') {
            steps {
                script {
                    sh 'docker build -t devops-spring-alfa/docker .'
                }
            }
        }


        stage('Hodolint Stage') {
            steps {
                sh 'hadolint Dockerfile --no-color --failure-threshold error | tee -a hadolint_lint.t'
            }
        }
       
       
        stage('Definir Variables') {
            steps {
                  script {
                  // def browser = sh(returnStdout: true, script: 'git describe --always')
                   def browser = sh(script: 'git describe --tags --abbrev=0', returnStdout: true)?.trim()
                    echo "${browser}"
                }
                
            }
         
                     
        }
       

     stage('Conexion AWS Key and Login push ECR AWS') {
            steps {
                script{
                    def latestTag = sh(script: 'git describe --always', returnStdout: true).trim()
                    echo "${latestTag}"
                    withCredentials([aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'aws_devops_key', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                        sh 'aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 211125742638.dkr.ecr.us-east-1.amazonaws.com/devops-test-alfa'
                        sh "docker tag devops-spring-alfa/docker:latest 211125742638.dkr.ecr.us-east-1.amazonaws.com/devops-test-alfa:${latestTag}"
                        sh "docker push 211125742638.dkr.ecr.us-east-1.amazonaws.com/devops-test-alfa:${latestTag}"
                        sh 'docker logout 211125742638.dkr.ecr.us-east-1.amazonaws.com/devops-test-alfa'
                    }
                }
            }
        }
           stage('Deploy') {
            steps {
                echo "Finalizacion de Stage"
            }
        }
    }
  } 
