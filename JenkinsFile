pipeline {
  agent any
  options {
      buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')
      disableConcurrentBuilds()
  }
stages {
        stage('Build') { 
            steps { 
                 echo "alfa_test prueba" 
            }
        }
      stage('Print Directory') {
            steps {
                script {
                    bat 'echo Current Directory: %CD%'
                }
            }
        }
  stage('Version Java') {
            steps {
                script {
                    bat 'java --version'
                }
            }
        }
  stage('Generamos Jar') {
            steps {
                script {
                    bat 'mvn package && java target/devops-alfa'
                }
            }
        }

  stage('Imagen Docker') {
            steps {
                script {
                    bat 'sudo docker build -t devops-spring-alfa/docker .'
                }
            }
        }


        stage('Deploy') {
            steps {
                echo "alfa_test prueba"
            }
        }
    }
  } 
