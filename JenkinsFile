pipeline {
  agent any
  options {
      buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')
      disableConcurrentBuilds()
  }
stages {
        stage('Build') { 
            steps { 
                sh 'make' 
            }
        }
        stage('Test'){
            steps {
                script {
                    bat 'echo Current Directory: %CD%'
                }
            }
        }
  stage('Version Java') {
            steps {
                script {
                    bat 'java --version'
                }
            }
        }
  stage('Generamos Jar') {
            steps {
                script {
                    bat 'mvn clean package'
                }
            }
        }

  stage('Imagen Docker') {
            steps {
                script {
                    bat 'docker build -t devops-spring-alfa/docker .'
                }
            }
        }

  stage('List Imagen Docker') {
            steps {
                script {
                    bat 'docker images'
                }
            }
        }




        stage('Deploy') {
            steps {
                echo "alfa_test prueba"
            }
        }
    }
  } 
